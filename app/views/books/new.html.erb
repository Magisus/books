<% provide(:title, "Add Book") %>
<h1>Add a book</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
      
      <%= f.submit "Add book", class: 'btn btn-primary' %>
    <% end %>      
  </div>
</div>